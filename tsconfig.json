{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2019",
      "outDir": "out",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "out",
      "**/node_modules/**"
    ]
  }